{
  "compilerOptions": {
    "outDir": "public",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": false, 
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
